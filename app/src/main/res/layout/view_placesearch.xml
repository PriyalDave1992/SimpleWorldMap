<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/predictedRow"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:layout_centerVertical="true"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_margin"
        android:layout_marginTop="@dimen/item_img_margin"
        android:contentDescription="@string/iv_marker"
        android:src="@drawable/ic_marker_1" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_margin"
        android:layout_marginRight="@dimen/item_margin"
        android:layout_marginTop="@dimen/address_top_margin"
        android:layout_toEndOf="@+id/iv_marker"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize"
        />
    <TextView
        android:id="@+id/tv_sec_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_marginLeft="@dimen/item_margin"
        android:layout_marginRight="@dimen/item_margin"
        android:layout_toEndOf="@+id/iv_marker"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/second_address_size" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/card_margin"
        android:background="@color/light_gray"/>
</RelativeLayout>